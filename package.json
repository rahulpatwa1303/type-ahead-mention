{
  "name": "type-ahead-mention",
  "version": "2.0.0",
  "description": "Highly customizable mention and template editor library for React with CodeMirror integration",
  "main": "./dist/type-ahead-mention.umd.js",
  "module": "./dist/type-ahead-mention.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/type-ahead-mention.es.js",
      "require": "./dist/type-ahead-mention.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./style": "./src/SuggestionBox.module.css"
  },
  "files": [
    "dist",
    "src/SuggestionBox.module.css",
    "README.md"
  ],
  "keywords": [
    "mention",
    "autocomplete",
    "template",
    "editor",
    "react",
    "typescript",
    "codemirror",
    "customizable",
    "suggestions",
    "typeahead"
  ],
  "author": "",
  "license": "MIT",
  "sideEffects": [
    "*.css"
  ],
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prepublishOnly": "rm -rf ./dist && npm run build"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "typescript": "5.4",
    "vite": "^4.4.5",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^3.0.0"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.1",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.6",
    "@uiw/react-codemirror": "^4.25.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
